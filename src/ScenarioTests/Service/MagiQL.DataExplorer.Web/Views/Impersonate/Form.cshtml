@{
    Layout = null;
}


<form class="form-inline" id="impersonate-form" action="@Url.Action("Index","Impersonate")">
    <div class="form-group">
        <label>Organization ID </label>
        <input type="text" class="form-control" name="organizationid" value="@ViewBag.OrganizationId" />
    </div>
    <div class="form-group">
        <label>User ID </label>
        <input type="text" class="form-control form-control-sm" name="userId" value="@ViewBag.UserId" />
    </div>
    <button type="submit" class="btn btn-secondary">Impersonate</button>
</form>